@model PTS.User

@{
    ViewBag.Title = "Login";   
}


@using (Html.BeginForm())
{     
    <section id="login">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">                    
                    <div class="form-wrap"> 
                        <h1>Login here</h1>  
                        <h5>@Html.ValidationSummary(true, "Login failed. Check your login details.")</h5>
                        <hr />                 
                        <div class="form-group">
                            @Html.LabelFor(u => u.Username)
                            @Html.TextBoxFor(u => u.Username, new { @class = "form-control"})
                            @Html.ValidationMessageFor(u => u.Username)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Password)
                            @Html.PasswordFor(u => u.Password, new { @class = "form-control"})
                            @Html.ValidationMessageFor(u => u.Password)
                        </div>
                        <input type="submit" id="btn-login" value="Log In" class="btn btn-custom btn-lg btn-block" />                      
                    </div>
                </div>
            </div>
        </div>
    </section>
}
